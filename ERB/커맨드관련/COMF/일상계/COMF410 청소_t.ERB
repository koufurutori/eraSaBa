;청소
;일상계 커맨드, 레벨 1
;-------------------------------------------------
@COM410
#DIM 청소전의더러움
#DIM 청소후의더러움
#DIM 청소력
#DIM SWEEPID
SWEEPID = CFLAG:MASTER:현재위치
TFLAG:무드상승억제 = 1
IF YOGORE:SWEEPID < OSOUJI_LIMIT(MASTER)
	DRAWLINE
	PRINTFORML 그렇게 지저분하지 않으니 아직 청소하지 않아도 될 것이다
	RETURN -1
ENDIF

SELECTCASE YOGORE:SWEEPID
	CASE IS < 500
		TFLAG:194 = 0
	CASE IS < 2000
		TFLAG:194 = 1
	CASE IS < 5000
		TFLAG:194 = 2
	CASEELSE
		TFLAG:194 = 3
ENDSELECT
;=================================================
LOCAL:4 = 0


IF YOGORE:(SWEEPID) > 5000 && TALENT:MASTER:61 == -2 && BASE:MASTER:체력 > (1500 - LOCAL:4 * 300) && BASE:MASTER:기력 > (2000 - LOCAL:4 * 100) && !CFLAG:MASTER:335
	PRINTL 그나저나 참아주기 힘들게 지저분하다…
	;PRINTL [0]평상심을 유지한다
	;PRINTL [1]무리
	;INPUT
	;IF RESULT == 0
		GOTO CANCEL_LOOP
	;ELSE
	;	CALL OSOUJI(LOCAL:4)
	;	RETURN 1
	;ENDIF
;=================================================
ELSE
	$ CANCEL_LOOP
	IF (!TARGET || !SHIRAHU(TARGET))
		CALL 팬티발견
	ENDIF
	IF TARGET && ABL:친밀 * 500 + ABL:순종 * 500 + ABL:청소기능 * 1000 > CFLAG:310 - CFLAG:MASTER:310
		TFLAG:193 = 1
	ELSE
		TFLAG:193 = 0
	ENDIF

	청소력 = (2 + ABL:MASTER:청소기능 + 3 * TALENT:MASTER:청소중독)
	
	청소력 = 청소력 * (5 - TALENT:MASTER:61) / 5
	청소전의더러움 = YOGORE:(SWEEPID)
	IF TFLAG:193 && !CFLAG:수면
		YOGORE:(SWEEPID) = YOGORE:(SWEEPID) / (청소력 + 1)
	ELSE
		YOGORE:(SWEEPID) = YOGORE:(SWEEPID) / 청소력
	ENDIF
	
	청소후의더러움 = YOGORE:(CFLAG:MASTER:현재위치)
	EX:MASTER:오늘의청소회수 = EX:MASTER:오늘의청소회수 + 청소전의더러움 - 청소후의더러움
	IF BASE:MASTER:기력 > 0
		DOWNBASE:MASTER:기력 += 100
	ELSE
		DOWNBASE:MASTER:체력 += 25
	ENDIF


	IF TARGET > 0 && !CFLAG:수면 && !CFLAG:우후후
		;고정으로 획득하는 소스
		SOURCE:환락 = 400
		;신뢰
		TFLAG:98 = 3

		;ABL:순종을 본다
		IF ABL:순종 <= 1
			SOURCE:환락 += (ABL:순종 * 60)
		ELSEIF ABL:순종 <= 3
			SOURCE:환락 += 200 + (ABL:순종 * 60)
		ELSEIF ABL:순종 <= 5
			SOURCE:환락 += 500 + (ABL:순종 * 60)
		ELSEIF ABL:순종 <= 8
			SOURCE:환락 += 750 + (ABL:순종 * 75)
		ELSEIF ABL:순종 <= 11
			SOURCE:환락 += 1000 + (ABL:순종 * 75)
		ELSE
			SOURCE:환락 += 2000 + (ABL:순종 * 30)
		ENDIF

		;호감 도를 본다
		IF CFLAG:2 <= 500
			SOURCE:환락 += CFLAG:2
		ELSEIF CFLAG:2 <= 5000
			SOURCE:환락 += 500 + (CFLAG:2 - 500) / 3
		ELSE
			SOURCE:환락 += 2000 + (CFLAG:2 - 5000) / 5
		ENDIF
		SIF SOURCE:환락 < 0
			SOURCE:환락 = 0
		SOURCE:정복 = 300 + 100 * ABL:새드끼
	ELSEIF TARGET > 0 && CFLAG:우후후 && !FLAG:70
		DOWNBASE:기력 += 100
		SOURCE:반감 += 500
		SOURCE:울굴 += 100
		LOCAL:3 = 0
		FOR LOCAL, 1, CHARANUM
			SIF CFLAG:LOCAL:동실
				LOCAL:3 ++
		NEXT
		IF LOCAL:3 == 1
			EXP:MASTER:이상청소경험 ++
			IF !GETBIT(CFLAG:3, 11)
				EXP:이상경험 ++
				SETBIT CFLAG:3, 11
			ENDIF
		ENDIF
	ENDIF

	
	IF ITEM:청소기 ;KR판 오리지날
		TIME += 10
	ELSE
		TIME += 30
	ENDIF
	SIF CFLAG:동행
		CFLAG:동행 += 30

	SIF TFLAG:193 && !CFLAG:수면 && !CFLAG:우후후
		EXP:청소경험 ++
	EXP:MASTER:청소경험 ++
ENDIF
RETURN 1


@팬티발견
#DIM 자택캐릭터
#DIM 랜덤팬티주인
VARSET LOCAL
랜덤팬티주인 = (RAND:12 + 1)
[SKIPSTART]
SELECTCASE CFLAG:MASTER:현재위치
	CASEELSE
		LOCAL = 랜덤팬티주인
ENDSELECT
[SKIPEND]

FOR 자택캐릭터,1,CHARANUM
	IF CFLAG:MASTER:현재위치 == CFLAG:(자택캐릭터):신사거주
		LOCAL = 자택캐릭터
	ENDIF
NEXT
LOCAL:1 = 오늘의팬티(LOCAL)
LOCAL:2 =  RAND:5000
SIF FLAG:발원내용 == 202
	LOCAL:2 = RAND:4000
IF YOGORE:(CFLAG:MASTER:현재위치) > LOCAL:2 && LOCAL && LOCAL:1 
	TSTR:3 = %CALLNAME:LOCAL%{LOCAL:1}/
	TSTR:2 = %PANTSNAME(LOCAL:1, LOCAL)%
	FOUND_PANTS_TYPE = LOCAL:1
	FOUND_PANTS_OWNER = LOCAL
ENDIF

;캐릭터가 이제 청소하려고 생각하는 방의 흩어진 상태
@OSOUJI_LIMIT(ARG)
#FUNCTION
#DIM O_LIMIT
O_LIMIT = 300
SIF TALENT:ARG:게으름
	O_LIMIT *= 10
O_LIMIT = O_LIMIT * (3 + TALENT:ARG:악취내성) / 3
SIF TALENT:ARG:헌신적
	O_LIMIT /= 2
SIF TALENT:ARG:청소중독
	O_LIMIT /= 10
RETURNF O_LIMIT

@COM_ABLE410
;청소 실행 판정
SIF !TFLAG:100
	RETURN 0
;일괄관리
SIF GLOBAL_COMABLE(410)
	RETURN RESULT
SIF CHK_DATENOW(CFLAG:MASTER:데이트중)
	RETURN 0
;더러워지지 않았으면 안 됨
SIF YOGORE:(CFLAG:MASTER:현재위치) < 100
	RETURN 0
;동침중에는 안 됨
SIF CFLAG:동침중
	RETURN 0
