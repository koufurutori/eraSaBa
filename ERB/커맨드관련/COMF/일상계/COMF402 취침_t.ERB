@COM402
#DIM 노동량
#DIM 수익


CALL OYASUMI

RETURN 1

;취침
@COM_ABLE402
;이동 실행 판정
SIF !TFLAG:100
	RETURN 0
;일괄관리
SIF GLOBAL_COMABLE(402)
	RETURN RESULT

;개인 방 설정
SIF CFLAG:MASTER:현재위치 != CFLAG:MASTER:311 && CFLAG:MASTER:현재위치 != OMANEKIBEYA() && CFLAG:동침중 == 0
	RETURN 0
;기상 후 12시간 이상 경과하고 있지 않으면 안 돼(디버그중)
IF FLAG:1005 == 0
SIF NEMUKE() < 720
	RETURN 0
SIF CFLAG:우후후 == 2
	RETURN 0
ENDIF
RETURN 1

@OYASUMI
IF TARGET > 0
	CFLAG:동행 = 0
	CFLAG:동침중 = 0
	CFLAG:MASTER:동행 = 0
	CFLAG:MASTER:동침중 = 0
ENDIF

IF CFLAG:MASTER:현재위치 == CFLAG:MASTER:311
	CALL SET_SLEEP(1, MASTER, 0)
ELSE
	CALL SET_SLEEP(1, TARGET, 1)
	SIF CFLAG:TARGET:쇠약
		CFLAG:TARGET:쇠약 = 0
ENDIF

CALL SET_SNEAK(0, TARGET, 1)
;CALL SET_TOGETHER(0, TARGET, 1)

CFLAG:MASTER:취침시간 = DAY * 1440 + TIME
BEGIN AFTERTRAIN