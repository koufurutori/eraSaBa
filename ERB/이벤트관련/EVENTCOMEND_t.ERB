		CFLAG:MASTER:현재위치 = CFLAG:MASTER:311
		FLAG:기절중단 = 0
	ENDIF
	FOR LOCAL, 0, CHARANUM
		SIF CFLAG:LOCAL:출금
			CONTINUE
		CALL ENDUFUFU(LOCAL)
		CALL SET_PRANK(0, LOCAL)
		CFLAG:LOCAL:데이트중 = MAIN_MAP
		CFLAG:LOCAL:동행 = 0
		FLAG:데이트상대 = 0
